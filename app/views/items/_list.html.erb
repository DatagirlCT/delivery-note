<table class="table table-striped">
  <thead>
    <tr>
      <th>Item Description</th>
      <th>Order Qty</th>
      <th>Received Qty</th>
      <% if @user.id == current_user.id %>
      <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @order_item.each do |order_item| %>
    <tr>
      <td><%= order_item.description %></td>
      <td><%= order_item.orderqty %></td>
      <td><%= order_item.receivedqty %></td>
      <% if @user.id == current_user.id %>
      <td>
        <%= link_to 'Update', order_item_path(order_item),
              :method => :edit,
              :class => "btn btn-xs btn-warning" %>
      </td>
      <% end %>
    </tr>
    <% end %>

  </tbody>
</table>
