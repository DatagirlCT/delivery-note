<p id="notice"><%= notice %></p>

<h1>Listing Order Items</h1>

<table>
  <thead>
    <tr>
      <th>Orderno</th>
      <th>Itemdescription</th>
      <th>Orderqty</th>
      <th>Receivedqty</th>
      <th>Receivedby</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.orderno %></td>
        <td><%= order_item.itemdescription %></td>
        <td><%= order_item.orderqty %></td>
        <td><%= order_item.receivedqty %></td>
        <td><%= order_item.receivedby %></td>
        <td><%= link_to 'Show', order_item %></td>
        <td><%= link_to 'Edit', edit_order_item_path(order_item) %></td>
        <td><%= link_to 'Destroy', order_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

