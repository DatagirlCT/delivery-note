<table class="table table-striped">
  <thead>
    <tr>
      <th>Project Code</th>
      <th>Project Name</th>
      <% if @user.id == current_user.id %>
      <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_projects.each do |user_project| %>
    <tr>
      <td><%= user_project.projectcode %></td>
      <td><%= user_project.projectname %></td>
      <% if @user.id == current_user.id %>
      <td>
        <%= link_to 'View Orders', orders_path(user_project),
              :method => :view,
              :class => "btn btn-xs btn-important" %>
      </td>
      <% end %>
    </tr>
    <% end %>

  </tbody>
</table>




